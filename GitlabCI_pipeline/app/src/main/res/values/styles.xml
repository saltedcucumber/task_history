    <style name="TextAppearance.Regular.12">
        <item name="android:textSize">@dimen/ts_12</item>
    </style>

    <style name="TextAppearance.Regular.12.Tundora">
        <item name="android:textColor">@color/tundora</item>
    </style>

    <style name="TextAppearance.Regular.12.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextAppearance.Regular.12.Malibu">
        <item name="android:textColor">@color/malibu</item>
    </style>

    <style name="TextAppearance.Regular.14">
        <item name="android:textSize">@dimen/ts_14</item>
    </style>

    <style name="TextAppearance.Regular.14.Tundora">
        <item name="android:textColor">@color/tundora</item>
    </style>

    <style name="TextAppearance.Regular.14.White">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.Regular.14.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextAppearance.Regular.16">
        <item name="android:textSize">@dimen/ts_16</item>
    </style>

    <style name="TextAppearance.Regular.16.Tundora">
        <item name="android:textColor">@color/tundora</item>
    </style>

    <style name="TextAppearance.Regular.16.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>
    <!-- endregion-->

    <!-- San Francisco Medium-->
    <style name="TextAppearance.Medium">
        <item name="android:fontFamily">@font/sf_medium</item>
    </style>

    <style name="TextAppearance.Medium.10">
        <item name="android:textSize">@dimen/ts_10</item>
    </style>

    <style name="TextAppearance.Medium.10.Tundora">
        <item name="android:textColor">@color/tundora</item>
    </style>

    <style name="TextAppearance.Medium.14">
        <item name="android:textSize">@dimen/ts_14</item>
    </style>

    <style name="TextAppearance.Medium.14.Tundora">
        <item name="android:textColor">@color/tundora</item>
    </style>

    <style name="TextAppearance.Medium.14.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextAppearance.Medium.14.Bittersweet">
        <item name="android:textColor">@color/bittersweet</item>
    </style>

    <style name="TextAppearance.Medium.14.Malibu">
        <item name="android:textColor">@color/malibu</item>

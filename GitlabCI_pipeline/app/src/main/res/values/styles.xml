    <!-- San Francisco SemiBold-->

    <style name="TextAppearance.SemiBold">
        <item name="android:fontFamily">@font/sf_semibold</item>
    </style>

    <style name="TextAppearance.SemiBold.16">
        <item name="android:textSize">@dimen/ts_16</item>
    </style>

    <style name="TextAppearance.SemiBold.16.Tundora">
        <item name="android:textColor">@color/tundora</item>
    </style>

    <style name="TextAppearance.SemiBold.16.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextAppearance.SemiBold.16.Malibu">
        <item name="android:textColor">@color/malibu</item>
    </style>

    <style name="TextAppearance.SemiBold.17">
        <item name="android:textSize">@dimen/ts_17</item>
    </style>

    <style name="TextAppearance.SemiBold.17.Tundora">
        <item name="android:textColor">@color/tundora</item>
    </style>

    <style name="TextAppearance.SemiBold.18">

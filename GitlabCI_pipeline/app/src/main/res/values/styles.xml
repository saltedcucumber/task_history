    <!-- San Francisco Bold-->
    <style name="TextAppearance.Bold">
        <item name="android:fontFamily">@font/sf_bold</item>
    </style>

    <style name="TextAppearance.Bold.24">
        <item name="android:textSize">@dimen/ts_24</item>
    </style>

    <style name="TextAppearance.Bold.24.Tundora">
        <item name="android:textColor">@color/tundora</item>
    </style>
    <!-- endregion-->

    <!-- San Francisco H1-->
    <style name="TextAppearance.H1">
        <item name="android:fontFamily">@font/sf_heavy</item>
    </style>

    <style name="TextAppearance.H1.24">
        <item name="android:textSize">@dimen/ts_24</item>
    </style>

    <style name="TextAppearance.H1.24.Tundora">
        <item name="android:textColor">@color/tundora</item>
    </style>
